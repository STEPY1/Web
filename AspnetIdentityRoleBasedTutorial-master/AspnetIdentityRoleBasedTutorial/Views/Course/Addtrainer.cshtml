@model AspnetIdentityRoleBasedTutorial.Data.Course

<h2>Add Trainer to Topic: @ViewBag.CourseName</h2>

<form asp-action="AddTrainer" method="post">
    <div class="form-group">
        <label class="control-label">Name Topic: @ViewBag.CourseName</label>
        <!-- readonly để ngăn người dùng thay đổi tên khóa học -->
    </div>
    <div class="form-group">
        <label asp-for="TrainerId" class="control-label">Topic</label>
        <select asp-for="TrainerId" class="form-control" asp-items="@ViewBag.Trainers">
            <option value="">-- Select Trainer --</option>
        </select>
        <span asp-validation-for="TrainerId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Trainer</button>
</form>
