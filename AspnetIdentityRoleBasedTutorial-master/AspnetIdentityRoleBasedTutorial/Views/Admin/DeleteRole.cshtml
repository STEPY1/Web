@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Delete Role";
}

<h1 class="mb-4">Delete Role</h1>

<div class="alert alert-danger " role="alert">
    <p>Are you sure you want to delete the Role "<strong>@Model.Name</strong>"?</p>
</div>

<form method="post" asp-action="DeleteRole" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
